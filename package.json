{
  "name": "essential-trading-invoice-app",
  "version": "1.0.0",
  "description": "Invoice generator with Stripe and PayPal",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "start": "node server/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@supabase/supabase-js": "^2.95.3",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "resend": "^3.2.0",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
